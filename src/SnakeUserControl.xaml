<UserControl x:Class="Leboeuf.SnakeExtension.SnakeUserControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="{DynamicResource VsBrush.Window}"
             Foreground="{DynamicResource VsBrush.WindowText}"
             BorderBrush="{DynamicResource VsBrush.ActiveBorderKey}"
             Width="310"
             Height="310"
             Name="SnakeWindow">
    <Grid>
        <Canvas Name="canvas" Background="White" HorizontalAlignment="Stretch" Width="310" Height="310" />
        <Button x:Name="btnSettings" Content="Settings..." HorizontalAlignment="Right" VerticalAlignment="Top" Width="75" Opacity="0" Click="btnSettings_Click" MouseEnter="btnSettings_MouseEnter" MouseLeave="btnSettings_MouseLeave" />
    </Grid>
</UserControl>
